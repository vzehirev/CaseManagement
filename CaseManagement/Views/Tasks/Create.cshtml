@model CaseManagement.ViewModels.Tasks.Input.CreateTaskInputModel

<div class="row mt-5">
    <div class="col-12 mx-auto text-center">
        <section>
            <div class="col-4 mx-auto text-center">
                <h4>Create Task</h4>
                <hr />
                </div>
                <form method="post">
                    <div class="row">
                        <div class="form-group col-4">
                            <label>Type</label>
                            <select asp-for="TypeId" class="form-control">
                                <option value="">Select type</option>

                                @foreach (var type in Model.TaskTypes)
                                {
                                    <option value="@type.Id">@type.Type</option>
                                }

                            </select>
                            <span asp-validation-for="TypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label>Status</label>
                            <select asp-for="StatusId" class="form-control">
                                <option value="">Select status</option>

                                @foreach (var status in Model.TaskStatuses)
                                {
                                    <option value="@status.Id">@status.Status</option>
                                }

                            </select>
                            <span asp-validation-for="StatusId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label>Action*</label>
                            <input id="action" asp-for="Action" type="text" placeholder="Required field" class="form-control" />
                            <span asp-validation-for="Action" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label>Next action*</label>
                            <input id="next-action" asp-for="NextAction" placeholder="Required field" class="form-control" />
                            <span asp-validation-for="NextAction" class="text-danger"></span>
                        </div>
                        <div class="form-group col-4">
                            <label>Comments</label>
                            <textarea id="comments" asp-for="Comments" class="form-control" rows="11"></textarea>
                            <span asp-validation-for="Comments" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-outline-info mr-5">CREATE</button>
                    <button id="copy-to-clipboard-btn" type="button" class="btn btn-outline-warning ml-5">COPY TO CLIPBOARD</button>
                </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_CopyToClipBoardBtnHandler" />
}
