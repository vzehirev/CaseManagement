@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reports";

    string ManageActive(string actionName)
    {
        return this.ViewContext.ActionDescriptor.RouteValues["action"] == actionName ? "active" : "";
    }
}

<div class="mt-3">
    <h4>@ViewData["Title"]</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link @ManageActive("RegisteredAgents")" asp-controller="StatisticsAndReports" asp-action="RegisteredAgents">Registered agents</a></li>
            </ul>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link @ManageActive("AgentsActivities")" asp-controller="StatisticsAndReports" asp-action="AgentsActivities">Agents' activities</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@RenderSection("Scripts", required: false)